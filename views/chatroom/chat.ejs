<body>


<div id="container" class="center">
  
  
  <% if (loggedin==0) { %>
	<div id="myModal" class="modal" style="display:block">

	<!-- Modal content -->
	<div class="modal-content animate">
	<form id="login" action="authenticate" method="POST">
		<label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" required>
	<script>
	window.onload=function(){
	document.getElementById('fromURL').value=document.location.pathname;
	}
	</script>
	<input type="hidden" id="fromURL" name="fromURL" value="">
	
    <button type="submit" style="margin-left:30px;">Login</button>
	</form>
	</div>
	</div>
  <%}%>
  
  <!-- <% if (loggedin==1) { %>
	<h2 class="h2v2" id="username"><%=username%></h2>
  <%}%> -->
</div>

<div class = "container-fluid">
  <div class = "row margin">
    <div class = "row">
      <div class = "col-xs-12">
        <h3 class="titleTxt">Theme</h3>
      </div>
    </div>

    <div class = "row">
      <div class = "col-xs-9">
        <div class="row">
          <div id="chatbox">
            <div id="chatmessages">
              <div><ul id="messages" class="flex-container"></ul></div>
            </div>
          </div> 
        </div>
        <div class="row">
          <form action="/" method="POST" id="chatForm">
            <input id="txt" autocomplete="off" autofocus="on" placeholder="message"/><button>Send</button>
          </form>
        </div>
      </div>
  
      <div class = "col-xs-3">
        <div class="inbox">
          <div id="activeUsers">
            <h4 class="activeUserTxt">Active users</h4>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

